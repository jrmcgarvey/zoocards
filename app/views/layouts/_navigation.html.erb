<script type="text/javascript">
  function formToJSON( selector ) {
    var form = {};
    $(selector).find(':input[name]:enabled').each( function() {
      var self = $(this);
      var name = self.attr('name');
      if (form[name]) {
        form[name] = form[name] + ',' + self.val();
      }
      else {
        form[name] = self.val();
      }
   });
    return form;
  }
  $(document).ready(function () {
    var token = $( 'meta[name="csrf-token"]' ).attr( 'content' );
    $.ajaxSetup( {
      beforeSend: function ( xhr ) {
        xhr.setRequestHeader( 'X-CSRF-Token', token );
      }
    });
    $('#submit-new-animal').on('click', function(e){
        aData = JSON.stringify(formToJSON("#animal_form"));
        aData = `{"animal": ${aData}}`
        $.ajax({
            url: '<%= animals_path %>', //this is the submit URL
            type: 'POST',
            data: aData,
            contentType: "application/json",
            dataType: "json",
            success: function(data){
              alert('The animal record was successfully added.');
              $('#exampleModal').remove();
              $(".modal-backdrop").remove();
              $('body').removeClass('modal-open');
              window.location.reload();
            },
            error: function(jqXHR, status, error) {
              alert("The animal record could not be created. " + jqXHR.responseText);
            }
        });
    });
});
</script>
